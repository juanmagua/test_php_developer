{% extends 'base.html.twig' %}

{% block title %}Hello {{user.getUsername()}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
  <h1>Hello {{user.getUsername()}} - <a class="text-muted" href="{{ path('app_logout') }}">logout </a></h1>
  <p>Roles:
    {% for role in roles %}
            {% if role != 'ROLE_USER' %}   
                    <span class="badge badge-secondary">
                        {{ role}}   
                    </span>
            {% endif %}
    {% endfor %}
  </p>
  <p>Groups:
        {{user.getGroupView()}}
  </p>
  <div class="row">
    <div class="col-12 mt-5">
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Media</th>
            <th scope="col">Event</th>
            </tr>
        </thead>
        <tbody>
            {% for media in medias %}
                <tr>
                <th scope="row">{{ media.id }}</th>
                <td>{{ media.user.username }} - {{ media.user.getGroupView() }}</td>
                <td>{{ media.filename }}</td>
                <td>{{ media.event.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>  
    </div>
</div>    
</div>
{% endblock %}
